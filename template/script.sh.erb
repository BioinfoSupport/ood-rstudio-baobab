#!/usr/bin/env bash

set -x

workdir="<%= session.staged_root %>"
mkdir -p -m 700 ${workdir}/run ${workdir}/var/lib/rstudio-server

singularity exec \
    --cleanenv \
    --env OMP_NUM_THREADS=<%= context.cpus %> \
    --env RSTUDIO_SESSION_TIMEOUT=0 \
    --env USER="$(id -un)" \
    --env PASSWORD="${password}" \
    --bind "/scratch:/tmp" \
    --bind "/acanas/m-BioinfoSupport/prados" \
    --bind "$(realpath ~/scratch)" \
    --bind "${workdir}/run:/run" \
    --bind "${workdir}/var/lib/rstudio-server:/var/lib/rstudio-server" \
    "<%= context.image %>" \
    rserver \
        --www-port=${port} \
        --server-user="$USER"

